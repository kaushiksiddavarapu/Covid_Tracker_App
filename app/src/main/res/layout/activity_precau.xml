<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b1"
    android:orientation="vertical"
    tools:context=".precau">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:id="@+id/back_btn1"
                android:src="@drawable/arrow"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:gravity="right"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/premask_logo"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:text="  Precautions"
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="left"
                    android:textColor="@color/gray"
                    android:textSize="40dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardGlobal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:checkable="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">




                <ImageView
                    android:id="@+id/stayhomeimg"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:src="@drawable/stayhome"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/stayhomeimg"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvstay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="STAY HOME STAY SAFE"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:gravity="center"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        />


                </RelativeLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/cardmask"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:checkable="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/maskimg"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/mask"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/masktxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WEAR MASKS"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/chartimg"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />

                    <TextView
                        android:id="@+id/maskbody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wear a cloth face covering (or face mask, if you have one) if they must be around other people."
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/chartimg"
                        android:fontFamily="@font/sf_pro_display_light"
                        android:layout_gravity="left"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardtissue"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:checkable="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tisstxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="USE TISSUE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/chartimg"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:layout_gravity="center"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tissbody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cover your mouth and nose using a tissue paper when coughing or sneezing in public."
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/chartimg"
                        android:fontFamily="@font/sf_pro_display_light"
                        android:layout_gravity="left"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/tissimg"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/tissue"
                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewGraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:checkable="true"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/washimg"
                    android:layout_width="200dp"
                    android:layout_height="320dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/washhands" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/washtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/chartimg"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:text="WASH HANDS"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/washbody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/chartimg"
                        android:fontFamily="@font/sf_pro_display_light"
                        android:text="Wash your hands often with soap and water for at least 20 seconds, especially after blowing your nose, coughing, or sneezing."
                        android:textSize="22dp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:checkable="true"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/cardShead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/salmon"
                        android:text="For more assistance"
                        android:layout_gravity="left"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:textSize="27sp"
                        />
                    <TextView
                        android:id="@+id/cardSbody"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:textColor="@color/salmon"
                        android:layout_below="@id/cardShead"
                        android:text="Please click the number below"
                        android:layout_gravity="left"
                        android:textSize="20sp"
                        />
                    <ImageView
                        android:id="@+id/Phimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/cardSbody"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/phlogo"
                        />

                    <TextView
                        android:id="@+id/cardSnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/salmon"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:layout_below="@id/cardSbody"
                        android:layout_toEndOf="@id/Phimg"
                        android:text="+91-11-23978046"
                        android:layout_gravity="left"
                        android:textSize="20sp"
                        />
                </RelativeLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
</ScrollView>